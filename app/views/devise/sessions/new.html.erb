<br><br><br><br><br><br>
<div class="container w-25 wrapper">
  <strong><h2 style="text-align:center">Log in</h2><strong>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email',class:'form-control'%>
    </div>
    <br>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password",placeholder:'Password',class:'form-control' %>
    </div>
    <br>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions btn btn-light">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
</div>
